---
const navItems = [
  { label: "Início", url: "/" },
  { label: "Sobre", url: "/sobre" },
  { label: "CEABEM indica", url: "/mensagens" },
  { label: "Eventos", url: "/eventos" },
  { label: "Livraria", url: "/livraria" },
  { label: "Tratamento Espiritual", url: "/tratamento-espiritual" },
  { label: "Contato", url: "/contato" },
];

// Replace with your actual WhatsApp number
const whatsappNumber = "5584999999999"; // Example format: country code + number
const whatsappUrl = `https://wa.me/${whatsappNumber}`;
---

<header class="sticky top-0 z-50 bg-white shadow-sm backdrop-blur-sm">
  <div class="container mx-auto px-4">
    <nav class="flex items-center justify-between h-16">
      <div class="flex items-center">
        <a href="/" class="text-2xl font-bold text-church-black">CEABEM</a>
      </div>

      <!-- Desktop Menu -->
      <div class="hidden md:flex space-x-8 items-center">
        {
          navItems.map((item) => (
            <a
              href={item.url}
              class="text-church-black hover:text-church-green transition-colors text-sm uppercase font-medium tracking-wider"
            >
              {item.label}
            </a>
          ))
        }
        <a
          href={whatsappUrl}
          target="_blank"
          class="text-church-green hover:text-green-600 transition-colors"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6"
            fill="currentColor"
            viewBox="0 0 24 24"
          >
