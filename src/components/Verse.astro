---
const { verse, reference } = Astro.props;
---

<section class="py-16 relative overflow-hidden bg-church-white">
  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-4xl mx-auto text-center">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-12 h-12 text-church-green mx-auto mb-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 016 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25"
        ></path>
      </svg>

      <blockquote
        class="text-2xl md:text-4xl font-medium text-church-black mb-6 italic"
      >
        "{verse}"
      </blockquote>

      <cite
        class="text-lg md:text-xl text-church-green font-medium inline-block border-t border-church-green/70 pt-4 px-12"
      >
        {reference}
      </cite>
    </div>
  </div>
</section>
