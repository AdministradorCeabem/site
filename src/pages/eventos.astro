---

<Layout title="Eventos - CEABEM">
  <Navbar />

  <main>
    <!-- Seção Hero com título da página -->
    <section class="py-16 bg-church-green/10">
      <div class="container mx-auto px-4">
        <div class="text-center">
          <h1 class="text-4xl md:text-5xl font-bold text-church-black mb-6">
            Nossos Eventos
          </h1>
          <p class="text-xl text-church-black/80 max-w-3xl mx-auto">
            Confira os próximos eventos e atividades
          </p>
        </div>
      </div>
    </section>

    <!-- Próximos Eventos -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-church-black mb-12 text-center">
          Eventos em Destaque
        </h2>

        {
          eventosDestaque.map((evento) => (
            <div
              class="bg-church-white p-6 rounded-xl shadow-sm hover:shadow-lg transition-shadow mb-8 border border-church-green/20"
            >
              <div class="flex flex-col md:flex-row gap-6">
                <div class="md:w-1/4 flex justify-center">
                  <!-- Data do Evento -->
                  <div
                    class="bg-church-green/20 rounded-xl p-3 text-center w-40 h-40 flex flex-col justify-center"
                  >
                    <span class="text-5xl font-bold text-church-black">{evento.dia}</span>
                    <span class="text-xl text-church-black">{evento.mes}</span>
                    <span class="text-church-black/70">{evento.ano}</span>
                    <span
                      class="mt-2 text-sm bg-church-green text-church-black/90 px-3 py-1 rounded-full"
                      >{evento.hora}</span
                    >
                  </div>
                </div>

                <div class="md:w-3/4">
                  <h3 class="text-2xl font-bold text-church-black mb-2">
                    {evento.titulo}
                  </h3>
                  <p class="text-church-black/70 mb-2">
                    <span class="text-church-black">Local:</span> {evento.local}
                  </p>
                  <p class="text-church-black">
                    {evento.descricao}
                  </p>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </section>

    <!-- Calendário/Eventos Regulares -->
    <section class="py-16 bg-church-gray/10">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-church-black mb-10 text-center">
          Eventos Regulares
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {
            eventosRegulares.map((evento) => (
              <div class="bg-white p-5 rounded-xl shadow-sm">
                <div class="flex items-center mb-4">
                  <div class="bg-church-green/20 p-3 rounded-lg mr-4">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke-width="1.5"
                      stroke="currentColor"
                      class="w-6 h-6 text-church-black"
                    >
                      <Fragment set:html={evento.icone} />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-bold text-lg text-church-black">
                      {evento.titulo}
                    </h3>
                    <p class="text-church-black/70">{evento.horario}</p>
                  </div>
                </div>
                <p class="text-church-black">
                  {evento.descricao}
                </p>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- CTA Inscrição Newsletter -->
    <section class="py-16 bg-church-green/20">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-2xl md:text-3xl font-bold text-church-black mb-4">
          Fique por dentro de todos os eventos
        </h2>
        <p class="text-church-black/80 max-w-2xl mx-auto mb-8">
          Inscreva-se em nossa newsletter para receber atualizações sobre os
          próximos eventos e atividades da igreja.
        </p>

        <div class="max-w-md mx-auto flex flex-col sm:flex-row gap-4">
          <input
            type="email"
            placeholder="Seu email"
            class="flex-grow px-4 py-3 rounded-lg border border-church-gray/30 focus:outline-none focus:border-church-green"
          />
          <Button client:load variant="primary">Inscrever</Button>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
